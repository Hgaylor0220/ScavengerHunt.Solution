@using ScavengerHunt.Models
@model List<ScavengerHunt.Models.Item>

<h1>Here are the different items to hunt!</h1>

@if (@Model.Count == 0)
{
    <h4>You haven't added any Items yet!</h4>
}


@foreach (Item item in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <p class="card-text">@($"{item.ItemName}")</p>
            <p>@Html.ActionLink("View details!", "Details", new { id = item.ItemId })</p>
        </div>
    </div>

}
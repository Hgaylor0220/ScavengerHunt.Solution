
@model ScavengerHunt.Models.Item

<h3>Fill out this information to add a Item!</h3>

@using(Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.ItemName)
        @Html.TextBoxFor(model => model.ItemName, new {@class="form-control"})
        @Html.LabelFor(model => model.ItemRules)
        @Html.TextBoxFor(model => model.ItemRules, new {@class="form-control"})
    </div>
    <input class="btn btn-info" type="submit" value="Save New Item">
}
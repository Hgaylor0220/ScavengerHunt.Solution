
@model ScavengerHunt.Models.Item

<div class ="jumbotron">
<h4>Add a new Item</h4>
</div>
@using (Html.BeginForm())
{
    <div class ="headline">
        
            <h5>Name your item</h5>
            @Html.TextBoxFor(model => model.ItemName)
            <br>
            <h5>Create rules for the item</h5>
            @Html.TextAreaFor(model => model.ItemRules)
            <br>
        
    <input type="submit" value="Add new item" class="btn default" />
    <br>
    <p>@Html.ActionLink("Show all Items", "Index")</p>
    </div>
    

   
   
}